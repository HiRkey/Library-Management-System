@model LibraryManagementSystem.Models.Book

@{
    ViewBag.Title = "Create";
}



<style>
    .jumbotron {
        background: rgba(0,0,0,0.6);
    }
    h2 {
        text-align:center;
        color:antiquewhite;
    }
    .form-group{
        color:white;

    }
</style>
<body background="~/images/book.jpg" style="background-size:cover">
    <div class="jumbotron">
